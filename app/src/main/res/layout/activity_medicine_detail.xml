<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="ng.org.knowit.med_manager.Activity.MedicineDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_medicine_detail_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ScrollView

        style="@android:style/Widget.Material.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideOverlay"
        tools:targetApi="lollipop">

        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/medicine_detail_image"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:srcCompat="@drawable/image_drug"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/medicine_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/paracetamol"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

            <TextView
                android:id="@+id/medicine_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_description"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <TextView
                android:id="@+id/medicine_detail_frequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/medicine_frequency"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/medicine_detail_interval"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/medicine_interval"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/medicine_detail_date_created"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/date_created"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>
